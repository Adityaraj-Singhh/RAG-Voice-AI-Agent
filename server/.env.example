# Server Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/university-leads

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# N8N Webhook Configuration
# Get this URL from your N8N workflow webhook node
N8N_WEBHOOK_URL=

# Optional: JWT Secret for admin authentication (future feature)
# JWT_SECRET=your-super-secret-jwt-key

# Optional: Admin credentials (future feature)
# ADMIN_EMAIL=admin@university.com
# ADMIN_PASSWORD=secure-password
